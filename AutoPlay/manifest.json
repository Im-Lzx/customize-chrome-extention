{
    "name": "AutoPlay",
    "description": "Auto play next study video for no click action!",
    "version": "1.0",
    "manifest_version": 3,
    "author":"Lzx",
    "background":{
        "service_worker":"background.js"
    },
    "host_permissions":["https://www.bjjnts.cn/*"],
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "action":{

    },
    "content_scripts":[
        {
            "matches":["https://www.bjjnts.cn/*"],
            "js":["content-script.js"]
        }
    ],

    "icons":{
        "16": "/img/icon.png",
        "32": "/img/icon.png",
        "48": "/img/icon.png",
        "128": "/img/icon.png"
    }
}